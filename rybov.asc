10 REM СХЕМАТИЧНАЯ СЦЕНА "ВЫ ПРОДАЁТЕ РЫБОВ?" / "НЕТ, ПРОСТО ПОКАЗЫВАЕМ"
20 CLS
30 COLOR 15
40 RESTORE
50 READ T
60 IF T=0 THEN 100 :REM ЛИНИЯ
61 IF T=1 THEN 110 :REM ОКРУЖНОСТЬ
62 IF T=2 THEN 120 :REM СПЛОШНОЙ КРУГ
63 IF T=8 THEN 200 :REM ТЕКСТ
64 IF T=9 THEN 90 :REM КОНЕЦ
90 GOTO 90

100 READ X1,Y1,X2,Y2 :PLOT X1,Y1 :LINE X2,Y2 :GOTO 50
110 READ X,Y,R :CIRCLE X,Y,R :GOTO 50
120 READ X,Y,R:REM СПЛОШНОЙ ЧЕРНЫЙ КРУГ
130 CIRCLE X,Y,R:R=R-2:COLOR0
140 FOR YY=Y-R TO Y+R
150   DX=SQR(R*R-(YY-Y)*(YY-Y))
160   PLOT X-DX,YY:LINE X+DX,YY
170 NEXT YY
190 COLOR15:GOTO 50
200 READX,Y,M$:CURX,Y:PRINTM$;:GOTO 50 :REM ТЕКСТУАЛ


